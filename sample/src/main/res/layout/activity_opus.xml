<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/bt_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:text="@string/play"/>

    <Button
        android:id="@+id/bt_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/bt_play"
        app:layout_constraintEnd_toEndOf="@+id/bt_play"
        app:layout_constraintTop_toTopOf="@+id/bt_play"
        android:layout_marginTop="100dp"
        android:text="@string/stop"/>

    <Button
        android:id="@+id/bt_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/bt_stop"
        app:layout_constraintEnd_toEndOf="@+id/bt_stop"
        app:layout_constraintTop_toTopOf="@+id/bt_stop"
        android:layout_marginTop="100dp"
        android:text="@string/record"/>

    <Button
        android:id="@+id/bt_stop_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/bt_record"
        app:layout_constraintEnd_toEndOf="@+id/bt_record"
        app:layout_constraintTop_toTopOf="@+id/bt_record"
        android:layout_marginTop="100dp"
        android:text="@string/stop_record"/>

</androidx.constraintlayout.widget.ConstraintLayout>